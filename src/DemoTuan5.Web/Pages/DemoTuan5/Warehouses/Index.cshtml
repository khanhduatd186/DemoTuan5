@section content_toolbar {
    <abp-button id="ExportToExcelButton" text="@L["ExportToExcel"].Value" icon="download" size="Small" button-type="Primary" />
    @if (await Authorization.IsGrantedAsync(DemoTuan5Permissions.Warehouses.Create))
    {
        <abp-button id="NewWarehouseButton" text="@L["NewWarehouse"].Value" icon="plus" size="Small" button-type="Primary" />
    }
